/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view,scroll-view,swiper,swiper-item,icon,text,progress,button,checkbox-group,checkbox,form,input,label,picker,radio-group,radio,slider,switch,action-sheet,action-sheet-item,action-sheet-cancel,modal,toast,loading,navigator,audio,image,video,map,canvas {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
page {
  height: 100%;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

checkbox-group,
radio-group{
  display:block;
}

:before,
:after ,
::before,
::after{
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.c-minheight {
  min-height: 80px;
}
.c-full {
  width: 100%;
  height: 100%;
}
.c-block {
  display: block;
}
.c-autosize {
  width: auto;
  height: auto;
}
.c-fullwidth {
  width: 100%;
}
.c-fullheight {
  height: 100%;
}
.c-initHide{
  opacity:0 !important;
}
.c-ellipse{
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   overflow:hidden;
}
/* 自定义样式 */

/*一条灰色的线*/
.view_line{
    width: 30%;
    height:3rpx;
    background-color: rgba(255,255,255,0.6);
}

.my_toast_title{
    font-size: 34rpx;
    color: rgb(255, 255, 255);
    font-weight: bold; 
    font-family: 宋体;
    text-align: center;
    }
.main{
  width: 100%;
  height: 100%;
}
.wx-view_login{
    display: flex; 
    width: 100%; 
    flex-direction: column; 
    justify-content:flex-start; 
    align-items: center; 
    float: none; 
    align-content: center;
    background:transparent;
  }
.view_logup_form{
    width: 90%;
    background-color: rgba(255,255,255,0.35);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    border-radius:16rpx;
    margin: 24rpx;
    border-style: solid;
    border-color: rgba(235,235,235,0.8);
    border-width: 2rpx;
}
.wx-view_log_item{
    width: 100%; 
    height: 100rpx;
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    border-style: solid;
    border-top-style: none;
    border-right-style: none;
    border-left-style: none;
    border-bottom-width: 2rpx;
    border-bottom-color: rgb(235,235,235);
    background-color: rgba(255, 255, 255,0.3);
    padding-left: 32rpx;
}


.view_login_splide{
    display: flex; 
    width: 100%; 
    height: 100%; 
    flex-direction: column; 
    justify-content:space-between; 
    align-items: center; 
    float: none; 
    padding-top: 20rpx;
    background-image: url('../../images/login_back.png');
    background-size: cover;
}

.wx-view_log_button{
    display: flex; 
    align-items: flex-end; 
    width: 90%; 
    align-self: center; 
    flex: 0 1 auto; 
    order: 1; 
    flex-wrap: nowrap; 
    align-content: flex-end; 
    justify-content: center; 
    }

.wx-button_logup{
    font-size:34rpx; 
    width: 86%; 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    text-align: center; 
    flex: 0 1 auto; 
    align-self: center; 
    margin-top: 24rpx;
}
.wx-text_logup{
    width: 200rpx; 
    flex: 0 0 auto; 
    font-size: 34rpx;
    font-weight: 550;
    font-family: 宋体;
    background:transparent;    
    color: rgb(35,35,35);
}
.wx_input{
    font-size: 34rpx;
    font-weight: 550;
    font-family: 宋体;
    background:transparent;
    color: rgb(35,35,35);
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
